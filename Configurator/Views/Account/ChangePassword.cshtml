@model Configurator.ViewModels.ChangePasswordViewModel

@{
    ViewBag.Title = "ChangePassword";
}

<h2>Change Password</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.Mail, new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.Mail, new { @class = "form form-control autowidth" })
                @Html.ValidationMessageFor(model => model.Mail)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Password, new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.Password, new { @class = "form form-control autowidth", type = "password", @id = "newPass1" })
                @Html.ValidationMessageFor(model => model.Password)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.RepeatPassword, new { @class = "control-label col-md-4"})
            <div class="col-md-8">
                @*@Html.TextBoxFor(model => model.Password, new { @class = "form form-control autowidth", type = "password" })*@
                @*<input type="password" id = "newPass2"/>*@
                @Html.TextBoxFor(model => model.RepeatPassword, new { @class = "form form-control autowidth", type = "password", @id = "newPass2" })
                @Html.ValidationMessageFor(model => model.RepeatPassword)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4"></div>
            <input type="submit" value="Change Password" class="btn col-md-8" id ="submit" style="margin-left:15px" />
        </div>
        <br /><br />
        
    </div>
    <div class="form-group">
    </div>
}
