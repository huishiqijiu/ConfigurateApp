@model Configurator.Services.ServiceModels.UserModel

@{
    ViewBag.Title = "LostPassword";
}

<h2>Lost Password</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        <div class="form-group">
            @*@Html.LabelFor("Email address that you registered: ", new { @class = "control-label col-md-4" })*@
            <span class = "control-label col-md-4" >Email address that you registered: </span>
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.LoginEmail, new { @class = "form form-control autowidth" })
                @Html.ValidationMessageFor(model => model.LoginEmail)
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-4"></div>
            <input type="submit" value="Send password" class="btn col-md-8" style="margin-left:15px" />
        </div>
        <br /><br />
       
    </div>
    <div class="form-group">
    </div>
}
